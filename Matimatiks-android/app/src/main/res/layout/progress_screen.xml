<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/company_color"
    android:layout_height="match_parent">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolBar_prog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:theme="@style/AppScreen"
            android:background="@color/white">
        </android.support.v7.widget.Toolbar>


    <Button
        android:id="@+id/Details1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:shadowColor="@color/light_font"
        android:shadowDx="1"
        android:shadowDy="1"
        android:layout_marginTop="100dp"
        android:shadowRadius="2"
        android:layout_gravity="center_horizontal"
        android:clickable="false"
        android:background="@xml/cus_button"
        android:textColor="@color/company_color"
        android:textSize="15sp" />
    <Button
        android:id="@+id/Details2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:shadowColor="@color/light_font"
        android:shadowDx="1"
        android:layout_marginTop="5dp"
        android:shadowDy="1"
        android:layout_gravity="center_horizontal"
        android:shadowRadius="2"
        android:clickable="false"
        android:background="@xml/cus_button"
        android:textColor="@color/company_color"
        android:textSize="15sp" />
    <Button
        android:id="@+id/Details3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:shadowColor="@color/light_font"
        android:shadowDx="1"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:clickable="false"
        android:background="@xml/cus_button"
        android:textColor="@color/company_color"
        android:textSize="15sp" />
    <Button
        android:id="@+id/Details4"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:shadowColor="@color/light_font"
        android:layout_gravity="center_horizontal"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:layout_marginTop="5dp"
        android:clickable="false"
        android:background="@xml/cus_button"
        android:textColor="@color/company_color"
        android:textSize="15sp" />
    <Button
        android:id="@+id/Details5"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:shadowColor="@color/light_font"
        android:shadowDx="1"
        android:layout_marginTop="5dp"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:clickable="false"
        android:background="@xml/cus_button"
        android:textColor="@color/company_color"
        android:textSize="15sp" />
    <Button
        android:id="@+id/Details6"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:shadowColor="@color/light_font"
        android:shadowDx="1"
        android:shadowDy="1"
        android:layout_marginTop="5dp"
        android:shadowRadius="2"
        android:layout_gravity="center_horizontal"
        android:clickable="false"
        android:background="@xml/cus_button"
        android:textColor="@color/company_color"
        android:textSize="15sp" />
</LinearLayout>